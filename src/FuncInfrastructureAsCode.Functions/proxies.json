{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "index": {
            "matchCondition": {
                "methods": ["GET"],
                "route": "/"
            },
            "backendUri": "https://funcinfrastructureascode.blob.core.windows.net/client/index.html"
        },
        "css": {
            "matchCondition": {
                "methods": ["GET"],
                "route": "/css/{*restOfPath}"
            },
            "backendUri": "https://funcinfrastructureascode.blob.core.windows.net/client/static/css/{restOfPath}"
        },
        "js": {
            "matchCondition": {
                "methods": ["GET"],
                "route": "/js/{*restOfPath}"
            },
            "backendUri": "https://funcinfrastructureascode.blob.core.windows.net/client/static/js/{restOfPath}"
        },
        "img": {
            "matchCondition": {
                "methods": ["GET"],
                "route": "/media/{*restOfPath}"
            },
            "backendUri": "https://funcinfrastructureascode.blob.core.windows.net/client/static/media/{restOfPath}"
        }
    }
}